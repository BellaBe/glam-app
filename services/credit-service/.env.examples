# services/credit-service/.env.example

# Service Configuration
SERVICE_NAME=credit-service
SERVICE_PORT=8015
DEBUG=false
LOG_LEVEL=INFO

# Database
DATABASE_URL=postgresql+asyncpg://credit:password@localhost:5432/credit_db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30

# Redis
REDIS_URL=redis://localhost:6379
CACHE_TTL_SECONDS=60

# NATS
NATS_URL=nats://localhost:4222
NATS_USER=
NATS_PASSWORD=

# Credit Configuration
TRIAL_CREDITS=100
LOW_BALANCE_THRESHOLD_PERCENT=20

# Order Credits
ORDER_CREDIT_ENABLED=true
ORDER_CREDIT_FIXED_AMOUNT=10
ORDER_CREDIT_PERCENTAGE=0.01
ORDER_CREDIT_MINIMUM=1

# Plugin Status
PLUGIN_STATUS_CACHE_TTL=15
PLUGIN_RATE_LIMIT_PER_MERCHANT=100
RATE_LIMIT_WINDOW_SECONDS=60

# Circuit Breaker
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT_SECONDS=60
CIRCUIT_BREAKER_WINDOW_SECONDS=30

# Monitoring
PROMETHEUS_PORT=9090
ENABLE_METRICS=true