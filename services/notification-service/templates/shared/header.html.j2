{% if preheader is defined and preheader %}
<div style="display:none!important;visibility:hidden;opacity:0;height:0;width:0;overflow:hidden;mso-hide:all;">
  {{ preheader }}
</div>
{% endif %}

<div style="max-width:600px;margin:0 auto;padding:16px 20px;">
  <div style="font:600 18px/1.2 -apple-system,BlinkMacSystemFont,'Segoe UI',Roboto,Inter,Arial,sans-serif;color:#101828;text-align:center;">
    {{ company_name | default('Glam You Up') }}
  </div>
  <div style="height:4px;background: {{ brand_color | default('#BD4267') }};border-radius:4px;margin-top:12px;"></div>
</div>
