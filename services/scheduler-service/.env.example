# services/scheduler-service/.env.example
# Service Configuration
SERVICE_NAME=scheduler-service
SERVICE_VERSION=1.0.0
API_PORT=8008
DEBUG=false

# Database Configuration
DATABASE_URL=postgresql+asyncpg://scheduler:scheduler@localhost:5432/scheduler_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=scheduler_db
DB_USER=scheduler
DB_PASSWORD=scheduler

# NATS Configuration
NATS_URL=nats://localhost:4222

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
LOCK_TIMEOUT_SECONDS=300
LOCK_RETRY_DELAY=0.1
LOCK_MAX_RETRIES=50

# Scheduler Configuration
SCHEDULER_TIMEZONE=UTC
SCHEDULER_MISFIRE_GRACE_TIME=300
SCHEDULER_MAX_INSTANCES=3
SCHEDULER_EXECUTOR_POOL_SIZE=10
SCHEDULER_COALESCE=true
SCHEDULER_JOB_DEFAULTS_MAX_INSTANCES=1

# Operational Configuration
MAX_SCHEDULE_LOOKAHEAD_DAYS=365
DEFAULT_MAX_RETRIES=3
DEFAULT_RETRY_DELAY=300
MAX_SCHEDULES_PER_CREATOR=1000
MAX_BULK_OPERATIONS=100
SCHEDULE_CACHE_TTL=300
EXECUTION_HISTORY_RETENTION_DAYS=30

# Allowed Commands (comma-separated)
ALLOWED_TARGET_COMMANDS=cmd.notification.send.email,cmd.notification.send.bulk,cmd.notification.send.sms,cmd.analytics.generate.report,cmd.billing.process.invoices,cmd.catalog.sync.products,cmd.merchant.check.status

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json