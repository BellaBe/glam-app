# Service Configuration
SERVICE_NAME=connector-service
SERVICE_VERSION=0.1.0
ENV=development
LOG_LEVEL=INFO

# API Configuration (not used for connector service)
# API_PORT=8010
# API_PREFIX=/api/v1

# Database Configuration
CONNECTOR_DB_HOST=localhost
CONNECTOR_DB_PORT=5436
CONNECTOR_DB_NAME=connector_db
CONNECTOR_DB_USER=connector_user
CONNECTOR_DB_PASSWORD=connector_pass
CONNECTOR_DB_ECHO=false
CONNECTOR_DB_POOL_SIZE=20
CONNECTOR_DB_MAX_OVERFLOW=10

# NATS Configuration
NATS_SERVERS=nats://localhost:4222

# Redis Configuration
REDIS_URL=redis://localhost:6379/2

# Shopify Configuration
SHOPIFY_API_VERSION=2024-01
SHOPIFY_RATE_LIMIT=4
SHOPIFY_TIMEOUT=30
MAX_RETRIES=3
BACKOFF_FACTOR=2.0

# Security
ENCRYPTION_KEY=your-32-byte-encryption-key-here