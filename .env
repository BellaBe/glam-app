##########################
# Global Configuration
##########################
COMPOSE_PROJECT_NAME=glam
APP_ENV=prod
LOG_LEVEL=debug # Options: debug, info, warning, error, critical
CACHE_BUSTER=1

# ============================================
# Shared Infrastructure
# ============================================
# Redis Cache
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis_secret_dev


##########################
# Catalog Service
##########################
CATALOG_DB_USER=catalog_user
CATALOG_DB_PASSWORD=catalog_password
CATALOG_DB_NAME=catalog_db
CATALOG_DB_EXTERNAL_PORT=5432  # External port for local development
CATALOG_API_PORT=8001
CATALOG_SERVICE_WORKERS=4
CATALOG_SERVICE_DB_POOL_SIZE=10
CATALOG_SERVICE_DB_ECHO=false


##########################
# Notifications Service
##########################
NOTIFICATIONS_DB_USER=notifications_user
NOTIFICATIONS_DB_PASSWORD=notifications_password
NOTIFICATIONS_DB_NAME=notifications_db
NOTIFICATIONS_DB_EXTERNAL_PORT=5435  # External port for local development
# Notifications API Configuration
NOTIFICATIONS_SERVICE_NAME=notification-service
NOTIFICATIONS_API_PORT=8002
NOTIFICATIONS_SERVICE_WORKERS=1
NOTIFICATIONS_SERVICE_DB_POOL_SIZE=10
NOTIFICATIONS_SERVICE_DB_ECHO=false
EMAIL_PROVIDER=sengrid  # Options: smtp, sendgrid, ses
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USERNAME=your_sendgrid_username
SMTP_PASSWORD=your_sendgrid_password
SMTP_USE_TLS=true  # Use TLS for SMTP
SENGRID_API_KEY=your_sendgrid_api_key  # Only if using SendGrid
EMAIL_FROM_ADDRESS=noreply@glamyouup.com
EMAIL_FROM_NAME=GlamYouUp
EMAIL_RATELIMITING_ENABLED=true  # Enable rate limiting for email sending
EMAIL_RATE_LIMITING_PER_HOUR=100  # Max emails per hour
EMAIL_RATE_LIMITING_PER_DAY=1000  # Max emails per day

##########################
# Catalog Job Processor
##########################
CATALOG_JOB_PROCESSOR_DB_USER=catalog_job_processor_user
CATALOG_JOB_PROCESSOR_DB_PASSWORD=catalog_job_processor_password
CATALOG_JOB_PROCESSOR_DB_NAME=catalog_job_processor_db


##########################
# Shopify Configuration
##########################
SHOPIFY_API_VERSION=2024-01

##########################
# Local Image Cache Configuration
##########################
CACHE_MAX_SIZE_GB=100

##########################
# AI Model Configuration
##########################
CATALOG_MODEL_PATH=/app/models
MODEL_VERSION=resnet50_v3
CATALOG_GPU_ENABLED=false

##########################
# Database Credentials - Profile Service
##########################
PROFILE_DB_USER=profile_user
PROFILE_DB_PASSWORD=profile_secure_password
PROFILE_DB_NAME=profile_db

##########################
# AWS S3 for permanent selfie storage
##########################
S3_BUCKET=glamyouup-selfies
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key

##########################
# AI Selfie Analysis
##########################
SELFIE_MODEL_PATH=/app/models
SELFIE_GPU_ENABLED=false  # Set to true if GPU available

##########################
# Monitoring and Logging
##########################

# Prometheus
PROMETHEUS_HOST=prometheus
PROMETHEUS_PORT=9090

# Grafana
GRAFANA_HOST=grafana
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=grafana_secret_dev

# Jaeger Tracing
JAEGER_UI_PORT=16686
JAEGER_COLLECTOR_PORT=14268

##########################
# Development Tools
###########################
# pgAdmin
PGADMIN_PORT=5050
PGADMIN_DEFAULT_EMAIL=admin@glam.local
PGADMIN_DEFAULT_PASSWORD=pgadmin_secret_dev

##########################
# Security
##########################
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

##########################
# Feature Flags
##########################
ENABLE_METRICS=true
ENABLE_TRACING=true
ENABLE_RATE_LIMITING=true

